#!/usr/bin/env bash

set -e

echo "Installing NPM Packages"

npm i -g npm

PACKAGES=(
  aglio
  babel-eslint
  bash-language-server
  code-push-cli
  coffee-script
  coffeelint
  dockerfile-language-server-nodejs
  eslint
  eslint-plugin-react
  js-yaml
  jsonlint
  mermaid
  meteorite
  neovim
  node-gyp-install
  react-native-cli
  standard
  svgo
  typescript
  typescript-eslint-parser
  typescript-language-server
  vscode-langservers-extracted
  wscat
  yaml-language-server
  )

npm install -g ${PACKAGES[@]}
