# vim
alias vim="nvim"
alias vi="nvim"

# git
alias g='git'
alias gs='git status -sb'
alias gc='git checkout'
alias gap='git add -p'
# copy the current branch name
alias gcb='git rev-parse --abbrev-ref HEAD | pbcopy'
alias copy-sha='git rev-parse --short HEAD | tr -d "\n" | pbcopy'

# Bundler
alias b="bundle"
alias bi="bundle install"
alias be="bundle exec"

# VirtualBox
alias vmrunning="VBoxManage list runningvms | sed -E 's/.*\{(.*)\}/\1/'"
alias vmpause="vmrunning | xargs -L1 -I {} VBoxManage controlvm {} pause"
alias vmresume="vmrunning | xargs -L1 -I {} VBoxManage controlvm {} resume"

alias mux="tmuxinator"

alias watchnet="watch -n 0 -d 'lsof -i'"

alias dotfiles="cd ~/.dotfiles"
alias vimrc="vim ~/.vimrc"
alias code="cd ~/Code/"

alias cat=bat
