npm i -g npm
#npm update -g

PACKAGES=(
  svgo
  phantomjs-prebuilt
  coffee-script
  coffeelint
  jsonlint
  js-yaml
  meteorite
  wscat
  react-native-cli
  code-push-cli
  eslint
  babel-eslint
  typescript-eslint-parser
  eslint-plugin-react
  aglio
  node-gyp-install
  mermaid
  standard
  neovim
  bash-language-server
  )

npm install -g ${PACKAGES[@]}
